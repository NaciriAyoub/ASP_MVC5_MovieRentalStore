@model MovieRentalStore.Models.Movie

@{
    ViewBag.Title = "GetMovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>

<h2>@Model.Name </h2>
<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release Date : @Model.RealeaseDate.ToShortDateString()</li>
    <li>Date Added : @Model.AddedDate.ToShortDateString()</li>
    <li>Number in Stock : @Model.NumberInStock</li>
</ul>